{
  "name": "@bthn.me/server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "dev": "DEV=1 next dev",
    "build": "next build",
    "build:eslint": "rm -rf ./utils/eslint/result && tsc --project ./utils/eslint/tsconfig.json && cp ./utils/eslint/package.json ./utils/eslint/result && yarn add --dev file:./utils/eslint/result",
    "start": "next start",
    "lint": "yarn eslint mocks --max-warnings=0 --ext .ts,.tsx && yarn eslint src --max-warnings=0 --ext .ts,.tsx && yarn stylelint 'src/**/*.css'",
    "lint:fix": "yarn eslint mocks --max-warnings=0 --ext .ts,.tsx && yarn eslint src --ext .ts,.tsx --fix && yarn stylelint './**/*.css' --fix",
    "prettier:check": "prettier --check",
    "prettier:fix": "prettier --write",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:update": "jest -u",
    "test:coverage": "jest --coverage=true",
    "validate-types": "tsc --project ./tsconfig.json"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.4.1",
    "axios": "^0.24.0",
    "classnames": "^2.3.1",
    "framer-motion": "^5.2.1",
    "next": "11.1.2",
    "next-i18next": "^8.9.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "tailwindcss": "^2.2.19"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@iconify/react": "^3.0.1",
    "@swc/core": "^1.2.99",
    "@swc/jest": "^0.2.4",
    "@testing-library/dom": "^8.2.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/classnames": "^2.3.1",
    "@types/eslint": "^7.28.1",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.1",
    "@types/react": "17.0.30",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "autoprefixer": "^10.4.0",
    "babel-loader": "^8.2.2",
    "css-loader": "^6.4.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.30.0",
    "eslint-config-next": "^11.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest-dom": "^3.9.2",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^4.12.4",
    "husky": "^7.0.2",
    "jest": "^27.3.0",
    "jest-module-name-mapper": "^0.1.5",
    "lint-staged": "^11.2.3",
    "postcss": "^8.3.11",
    "prettier": "^2.4.1",
    "stylelint": "^13.13.1",
    "stylelint-declaration-strict-value": "^1.7.12",
    "stylelint-order": "^4.1.0",
    "typescript": "4.4.4"
  },
  "lint-staged": {
    "*.{js,ts,tsx,css,md}": "prettier --check",
    "src/**/*.css": "stylelint --quiet",
    "src/**/*spec.{js,ts,tsx}": "yarn test"
  }
}
